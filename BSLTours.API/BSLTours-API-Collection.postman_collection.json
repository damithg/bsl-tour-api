	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Set default slugs if not defined",
					"if (!pm.environment.get('tour_slug')) {",
					"    pm.environment.set('tour_slug', 'cultural-triangle-explorer');",
					"}",
					"if (!pm.environment.get('destination_slug')) {",
					"    pm.environment.set('destination_slug', 'sigiriya');",
					"}",
					"if (!pm.environment.get('experience_slug')) {",
					"    pm.environment.set('experience_slug', 'tea-plantation-tour');",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"pm.test('Response time is acceptable', function () {",
					"    pm.expect(pm.response.responseTime).to.be.below(5000);",
					"});"
				]
			}
		}
	],
	"variable": [
		{
			"key": "api_base_url",
			"value": "http://localhost:5001",
			"type": "string"
		}
